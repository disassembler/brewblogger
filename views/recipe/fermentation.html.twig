{% if log.brewPrimary is not empty %}
    <div class="headerContent">Fermentation</div>
    <div class="data-container">
        <div class="dataTable">
            <table>
                <tr>
                    <td class="dataLabelLeft">Primary:</td>
                    <td class="data">{{ log.brewPrimary }} days @ {{ log.brewPrimaryTemp }}&deg {{ app.preferences.measTemp }}</td>
                </tr>
                {% if log.brewSecondary is not empty %}
                    <tr>
                        <td class="dataLabelLeft">Secondary:</td>
                        <td class="data">{{ log.brewSecondary }} days @ {{ log.brewSecondaryTemp }}
                            &deg {{ app.preferences.measTemp }}</td>
                    </tr>
                {% endif %}
                {% if log.brewTertiary is not empty %}
                    <tr>
                        <td class="dataLabelLeft">Tertiary:</td>
                        <td class="data">{{ log.brewTertiary }} days @ {{ log.brewSecondary }}
                            &deg {{ app.preferences.measTemp }}</td>
                    </tr>
                {% endif %}
                {% if log.brewLager is not empty %}
                    <tr>
                        <td class="dataLabelLeft">Lager:</td>
                        <td class="data">{{ log.brewLager }} days @ {{ log.brewLagerTemp }}&deg {{ app.preferences.measTemp }}</td>
                    </tr>
                {% endif %}
                {% if log.brewAge is not empty %}
                    <tr>
                        <td class="dataLabelLeft">Age:</td>
                        <td class="data">{{ log.brewAge }} days @ {{ log.brewAgeTemp }}&deg {{ app.preferences.measTemp }}</td>
                    </tr>
                {% endif %}
            </table>
        </div>
    </div>
{% endif %}