<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <meta app.site_info."description"
          content="{{ app.site_info.brewerLogName }} is the homebrewing log and recipe collection of {{ app.site_info.brewerFirstName }} {{ app.site_info.brewerLastName }}. Powered by BrewBlogger {{ app.site_info.version }}.">
    <meta app.site_info."robots" content="index,follow,noarchive">
    <link rel="shortcut icon" href="{{ app.request.basepath }}/favicon.ico" type="image/x-icon">
    <title>
        {% block title %}
            {% if app.preferences.mode == "1" %}
                {{ app.site_info.brewerFirstName }}'s BrewBlog &gt; {{ page_title }} {{ page_title_extension }}
            {% elseif app.preferences.mode == "2" %}
                {{ app.site_info.brewerFirstName }} {{ app.site_info.brewerLogName }} &gt; {{ page_title }} {{ page_title_extension }}
            {% endif %}
        {% endblock %}
    </title>
    <link rel="stylesheet" href="{{ app.request.basepath }}/css/universal_elements.css" type="text/css">

    {% if checkmobile %}
        <link rel="stylesheet" href="{{ app.request.basepath }}/css/mobile.css" type="text/css">
    {% else %}
        <script type="text/javascript" src="{{ app.request.basepath }}/js_includes/menu.js"></script>
        <script type="text/javascript" src="{{ app.request.basepath }}/js_includes/jquery.js"></script>
        <script type="text/javascript" src="{{ app.request.basepath }}/js_includes/thickbox.js"></script>
        <script type="text/javascript" src="{{ app.request.basepath }}/js_includes/jump_menu.js"></script>
        <link rel="stylesheet" href="{{ app.request.basepath }}/css/thickbox.css" type="text/css" media="screen">
        <link rel="stylesheet" href="{{ app.request.basepath }}/css/{{ app.preferences.theme }}" type="text/css">
    {% endif %}

    {% block head %}{% endblock %}
</head>
<body {% block bodyAttr %}{% endblock %}>

<div id="main-container">
    <!-- Begin Header -->
    <div id="header">
        <div class="titleText">{{ app.site_info.brewerFirstName }}{% if app.preferences.mode == 1 and app.site_info.brewerFirstName %}'s{% endif %}&nbsp;{{ app.site_info.brewerLogName }}</div>
        <div class="quoteText">{{ app.site_info.brewerTagline }}</div>
    </div>
    <div id="nav">{% include "includes/navigation.html.twig" %}</div>
    <!-- End Header -->
    <!-- Begin Main Content -->
    <div id="content-wrapper">
        <div id="{% block content_id "content-wide" %}">
            <div id="{% block breadcrumb_id "breadcrumbWide" %}">{{ breadcrumb }}</div>
            {% if app.preferences.mode == 2 and app.preferences.home == page and app.preferences.allowNews == "y" and totalRows_newsGen > 0 %}{#{{render(controller('news.controller:index'))}}#}{% endif %}
            <div id="{% block subtitle_id "subtitleWide" %}">
                <div id="icon"><img src="{{ app.request.basepath }}{{ image_src }}{{ icon }}.png" align="bottom"></div>
                {% block page_title page_title %}
            </div>
            <!-- end subtitle or subtitleWide -->
            {% block body %}{% endblock %}
        </div>
        <!-- End left-column -->
        {% if block('sidebar') is not empty %}
            <div id="right-column">
                {% block sidebar %}{% endblock %}
            </div><!-- End right-column -->
        {% endif %}
    </div>
    <!-- End contentWrapper -->
    <!-- End Main Content -->

    <!-- Begin Footer -->
    <div id="footer">{% include "includes/footer.html.twig" %}</div>
    <!-- End Footer -->
</div>
<!-- End Main Container -->
</body>
</html>
